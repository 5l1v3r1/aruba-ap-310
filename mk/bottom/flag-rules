#
# exclusion for CFLAGS & LDFLAGS is done on ${CFLAGS} and ${LDFLAGS} only
# include paths can be excluded on ${INCS_LOCAL}
#
INCS_LOCAL += ${INCS_LOCAL_yes}
EXCLUDE_INCS_LOCAL += ${EXCLUDE_INCS_LOCAL_yes}

CFLAGS_LOCAL += ${CFLAGS_LOCAL_yes}
EXCLUDE_CFLAGS += ${EXCLUDE_CFLAGS_yes}

LDFLAGS_LOCAL += ${LDFLAGS_LOCAL_yes}
EXCLUDE_LDFLAGS += ${EXCLUDE_LDFLAGS_yes}

_ALLCFLAGS := $(CPPFLAGS) $(CFLAGS) $(CFLAGS_LOCAL) $(ARMK_LFLAGS) $(ARMK_FLAGS)
ALLCFLAGS := $(filter-out ${EXCLUDE_CFLAGS},${_ALLCFLAGS})

_ALLINCS :=  $(INCS_LOCAL) 
ALLINCS := $(filter-out ${EXCLUDE_INCS_LOCAL},${_ALLINCS})

_ALLLDFLAGS := $(LDFLAGS) $(LDFLAGS_LOCAL) ${DYNFLAG}
ALLLDFLAGS := $(filter-out ${EXCLUDE_LDFLAGS},${_ALLLDFLAGS})

ALLCFLAGS += $(CFLAGS_PROF)

ifneq "$(findstring $(APPLICATION),$(PROFILE_APPLICATION))" ""
ALLCFLAGS += $(CFLAGS_PROF)
ALLLDFLAGS += $(LDFLAGS_PROF)
endif
